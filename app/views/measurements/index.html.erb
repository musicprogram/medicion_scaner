<div class="container ">
  <p id="notice"><%= notice %></p>


<div class="jumbotron">
<div class="row">
    <div class="col-md-6">
   <h3>Mediciones</h3> 
    
  </div>
  <div class="col-md-6">
    
<%= image_tag('sena.png', class:'img_i') %>
    
  </div>
</div>
</div>

<p class="lead text-right">Total: <%= @measurements.count%> <%= link_to '<b>AGREGAR</b>'.html_safe, new_measurement_path %> </p>  

<br>
<div class="well">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Documento</th>
      <th>Nombre apellido</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.fecha %></td>
        <td><%= measurement.documento %></td>
        <td><%= measurement.nombre_apellido %></td>
        <td><%= link_to 'Editar', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Eliminar', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


</div>